<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
		<UseBlazorWebAssembly>true</UseBlazorWebAssembly>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Fluxor" Version="3.7.0" />
		<PackageReference Include="Fluxor.Blazor.Web" Version="3.7.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.0-preview.8.20414.8" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.0-preview.8.20414.8" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<Watch Include="**\*.js;**\*.css;**\*.cs;**\*.razor;**\*.html" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Components\Element.razor.css" />
	  <None Remove="Components\PeriodicTable.razor.css" />
	  <None Remove="Scenes\MatchGame.razor.css" />
	</ItemGroup>

	<ItemGroup>
	  <Watch Remove="Components\Element.razor.css" />
	  <Watch Remove="Components\PeriodicTable.razor.css" />
	  <Watch Remove="Extensions\ElementGroupExtensions.cs" />
	  <Watch Remove="Scenes\MatchGame.razor.css" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="Components\Element.razor.css" />
	  <Content Include="Components\PeriodicTable.razor.css" />
	  <Content Include="Scenes\MatchGame.razor.css" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\ThePeriodicTableOfElementsGame.GamePlay\ThePeriodicTableOfElementsGame.GamePlay.csproj" />
	</ItemGroup>

	<Choose>
		<When Condition="'$(Configuration)' == 'Debug'">
			<ItemGroup>
				<PackageReference Include="Fluxor.Blazor.Web.ReduxDevTools" Version="3.7.0" />
			</ItemGroup>
		</When>
	</Choose>

</Project>
