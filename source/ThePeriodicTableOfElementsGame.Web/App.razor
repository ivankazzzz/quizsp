@inherits Fluxor.Blazor.Web.Components.FluxorComponent
<Fluxor.Blazor.Web.StoreInitializer />
<LayoutView Layout=typeof(MainLayout)>
	@if (NavigationState.Value.Scene == GamePlay.Navigation.SceneType.MainMenu)
	{
		<MainMenu />
	}
	@if (NavigationState.Value.Scene == GamePlay.Navigation.SceneType.ElementMatchGame
	 || NavigationState.Value.Scene == GamePlay.Navigation.SceneType.TransitionFromElementMatchGameToGameOver
 || NavigationState.Value.Scene == GamePlay.Navigation.SceneType.GameOver)
	{
		<MatchGame />
	}
</LayoutView>